     <mx:Script>
     	<![CDATA[
     		import ActionForm.DyData;
     		import ActionForm.From.com.hitb.util.GlobalManager;
     		import mx.controls.Alert;
     		import ActionForm.vivid;
     		import mx.containers.ViewStack;
     		import mx.collections.ArrayCollection;
		import mx.controls.ComboBox;
		[Bindable]
		public var vs:ViewStack;
		[Bindable]
  	    public var textpath:String="";
		public function init():void{
		 vs=this.parent as ViewStack;
	     textpath="路径： "+DyData.Urlname+" 第5步，共"+DyData.sum+"步";
		}
		
		private function initApp():void{
		GlobalManager.getInstance().addEventListener("shuanxintest1",shuanxintest);
		  canvas1.removeAllChildren();
		  vs=this.parent as ViewStack;
		  if(!DyData.modletype){   
		  var xml:XML=vivid.updatexml;
			var xmllist:XMLList=new XMLList(XML(xml.config.TDataGridType[0]).child("TDataGrid"));
			  for(var i:int=0;i<vivid.bfcf.length;i++){
			  	for(var j:int=0;j<xmllist.length();j++){
			       if(vivid.bfcf[i].cid==xmllist[j].@id){
			         vivid.bfcf[i].using=true;
			       }
			    }
			  }
		 if(xml.config.TDataGridType.@type=="1"){
		  check.selected=true;
		  	     var dgr:DGRewrite=new DGRewrite();
				dgr.percentHeight=100;
				dgr.percentWidth=100;
				dgr.y=0;
				dgr.x=0;
				dgr.arr=vivid.bfcf;
				canvas1.addChild(dgr);
		  }else{
		  check.selected=false;
		  }
		  }else{
	        var dgr:DGRewrite=new DGRewrite();
			dgr.percentHeight=100;
			dgr.percentWidth=100;
			dgr.y=0;
			dgr.x=0;
			dgr.arr=vivid.dncf;
			canvas1.addChild(dgr);}
		}
		public function shuanxintest(event:MouseEvent):void{
		canvas1.removeAllChildren();
		  if(!vivid.modeltype){ 
		       var xml:XML=vivid.updatexml;
		      var xmllist:XMLList=new XMLList(XML(xml.TDataGridType[0]).child("TDataGrid"));
			  for(var i:int=0;i<vivid.bfcf.length;i++){
			  	for(var j:int=0;j<xmllist.length();j++){
			       if(vivid.bfcf[i].cid==xmllist[j].@id){
			         vivid.bfcf[i].using=true;
			       }
			    }
			  }
		 }
	    if(check.selected==true){
		var dgr:DGRewrite=new DGRewrite();
		dgr.percentHeight=100;
		dgr.percentWidth=100;
		dgr.y=0;
		dgr.x=0;
		dgr.arr=vivid.bfcf;
		canvas1.addChild(dgr);
		}else{
		 canvas1.removeAllChildren();
        }
		}
		//是否配置的修改
		public function changeQuery():void{
		if(check.selected==true){
		var dgr:DGRewrite=new DGRewrite();
		dgr.percentHeight=100;
		dgr.percentWidth=100;
		dgr.y=0;
		dgr.x=0;
		dgr.arr=vivid.bfcf;
		canvas1.addChild(dgr);
		}else{
		 canvas1.removeAllChildren();
        }
  	  }
         //上一步的方法
          public function UPNode(event:MouseEvent):void{
          	vivid.bfcf=new ArrayCollection(); 
		 	vivid.dncf=new ArrayCollection(); 
		 	vivid.configarr=new ArrayCollection();
		 	vivid.kongzhi=true;
          	var o:Object=this.parent.getChildByName("DyDesigner1");
            vs.selectedChild=o as Canvas;
          }
          //下一步
         public function DownNode(event:MouseEvent):void{
         	   vivid.Queryjd=check.selected;
          	   var o:Object=this.parent.getChildByName("AdvancedDataGrid1"); 
	           vs.selectedChild=o as Canvas; 
         }
         public function Cancel():void{
          navigateToURL(new URLRequest('javascript:window.opener.location.reload();window.close()'),'_self');
         }
     	]]>
     </mx:Script>
