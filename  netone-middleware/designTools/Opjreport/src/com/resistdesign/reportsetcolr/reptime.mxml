<?xml version="1.0" encoding="utf-8"?>
<mx:HBox   xmlns:fx="http://ns.adobe.com/mxml/2009" 
		   xmlns:s="library://ns.adobe.com/flex/spark" 
		   xmlns:mx="library://ns.adobe.com/flex/mx" 
		   verticalAlign="middle" horizontalAlign="left" width="155" height="23" horizontalScrollPolicy="off" verticalScrollPolicy="off">
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			private var _text:String="日期字段";
			private var _datetype:String="day";
			
			public function get datetype():String
			{
				return _datetype;
			}

			public function set datetype(value:String):void
			{
				_datetype = value;
			}

			[Bindable]
			public function get text():String
			{
				return _text;
			}
			
			public function set text(value:String):void
			{
				_text = value;
			}
			
		]]>
	</fx:Script>
	
	<s:Label text="{text}" />
	<mx:DateField width="100%" height="100%"  editable="false"/>

	
</mx:HBox>
